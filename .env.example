# WatchDog Environment Configuration
# Copy this file to .env and customize for your environment

# Database
DATABASE_URL=postgres://watchdog:watchdog@localhost:5432/watchdog?sslmode=disable

# Server
PORT=8080
HOST=0.0.0.0

# Security (CHANGE IN PRODUCTION!)
# Must be exactly 32 characters for AES-256
ENCRYPTION_KEY=change-me-in-production-32chars!

# Session (must be at least 32 characters)
SESSION_SECRET=your-session-secret-min-32-chars!

# Alerts (optional)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Agent settings
AGENT_HEARTBEAT_INTERVAL=30
AGENT_RETRY_ATTEMPTS=3

# Development
DEBUG=true
LOG_LEVEL=debug
